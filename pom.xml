                <executions>
                    <execution>
                        <id>hack-binary</id>
                        <phase>validate</phase>
                        <configuration>
                            <file>${basedir}/lib/appengine-pipeline-patched.jar</file>
                            <repositoryLayout>default</repositoryLayout>
                            <groupId>com.google.appengine</groupId>
