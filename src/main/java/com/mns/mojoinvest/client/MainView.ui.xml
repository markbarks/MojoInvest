            -moz-box-shadow: 2px 2px 2px #62635e;
            -webkit-box-shadow: 2px 2px 2px #62635e;
        }

        .mainPanel {
            margin: 20px 2px 20px 30px;
        }

        footer {
            padding: 0px 30px;
        }

        footer a, footer a:visited {
            font-size: 10px;
            float: left;
            color: #62635e;
            line-height: 20px;
            padding: 0px 5px;
        }

        footer a:hover {
            color: #3d3d3d;
        }

    </ui:style>

