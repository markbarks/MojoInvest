<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
             ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
             ui:generateLocales="default"
        >

    <ui:with type="com.mns.mojoinvest.client.NameTokens" field="nameTokens"/>
    <ui:with field='res' type='com.mns.mojoinvest.client.resources.Resources'/>

    <ui:style>
        .roundedWhiteBox {
            background-color: white;
            -webkit-border-radius: 5px;
            -moz-border-radius: 5px;
            border-radius: 5px;
            box-shadow: 2px 2px 2px #62635e;
            -moz-box-shadow: 2px 2px 2px #62635e;
            -webkit-box-shadow: 2px 2px 2px #62635e;
        }

        .mainPanel {
            margin: 20px 20px 20px 30px;
        }

        footer {
            padding: 0px 30px;
        }

        footer a, footer a:visited {
            font-size: 10px;
            float: left;
            color: #62635e;
            line-height: 20px;
            padding: 0px 5px;
        }

        footer a:hover {
            color: #3d3d3d;
        }

    </ui:style>

    <g:DockLayoutPanel unit='EM'>

        <g:north size="4">
            <g:FlowPanel ui:field="topPanel"/>
        </g:north>

        <g:center>
            <g:FlowPanel ui:field="pageContent"
                         addStyleNames="{style.mainPanel} {style.roundedWhiteBox}"/>
        </g:center>

        <g:south size="2">
            <g:HTMLPanel>
                <footer>
                    <g:InlineHyperlink targetHistoryToken="{nameTokens.guide}">About</g:InlineHyperlink>
                    <g:InlineHyperlink targetHistoryToken="{nameTokens.guide}">Help</g:InlineHyperlink>
                    <g:InlineHyperlink targetHistoryToken="{nameTokens.guide}">Terms</g:InlineHyperlink>
                </footer>
            </g:HTMLPanel>
        </g:south>

    </g:DockLayoutPanel>


</ui:UiBinder>