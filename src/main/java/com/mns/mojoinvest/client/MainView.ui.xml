<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:gdp="urn:import:com.google.gwt.user.datepicker.client"
             ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
             ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
             ui:generateLocales="default"
        >

    <ui:with type="com.mns.mojoinvest.client.NameTokens" field="nameTokens"/>
    <ui:with field='res' type='com.mns.mojoinvest.client.resources.Resources'/>


    <ui:style>

        .headerContentOuter {
            position: fixed;
            top: 0;
            left: 0;
            margin: 0;
            padding: 0;
            width: 100%;
            height: 91px;
            font-size: 0.8em;
            background-color: #f2f2f2;
            color: #000000;
            /* green #7BB31A yellow #EEDB00  blue #8B88FF http://www.colorcombos.com/color-scheme-98.html */
        }

        .headerContent {
            margin: 0px auto;
            padding: 0;
            max-width: 900px;

        }

        .pageContent {
            margin-top: 91px;
            margin-left: auto;
            margin-right: auto;
            padding: 0;
            max-width: 900px;
            background-color: #fafafa;
        }

        .logo {
            float: left;
            /*padding: 0.5em;*/
        }

        .headerNav {
            float: right;
            padding: 4px 40px 0px;
            background-color: #f2f2f2;
        }

    </ui:style>

    <g:HTMLPanel>
        <g:HTMLPanel addStyleNames="{style.headerContentOuter}">
            <g:HTMLPanel addStyleNames="{style.headerContent}">
                <g:HTMLPanel addStyleNames="{style.logo}">
                    <g:Image resource='{res.logo}'/>
                </g:HTMLPanel>
                <g:SimplePanel ui:field="headerNav" addStyleNames="{style.headerNav}">
                </g:SimplePanel>
            </g:HTMLPanel>
        </g:HTMLPanel>

        <g:SimplePanel ui:field="pageContent" addStyleNames="{style.pageContent}">
        </g:SimplePanel>

    </g:HTMLPanel>

</ui:UiBinder>