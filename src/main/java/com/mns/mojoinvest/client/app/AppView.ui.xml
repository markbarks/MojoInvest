<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:com.mns.mojoinvest.client.app.component"

             ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
             ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
             ui:generateLocales="default"
        >

    <ui:with type="com.mns.mojoinvest.client.NameTokens" field="nameTokens"/>
    <ui:with field='res' type='com.mns.mojoinvest.client.resources.Resources'/>

    <ui:style>

        .backtest {
            background-color: #ff7f50;
        }

        .strategy {
            background-color: #f5f5dc;
        }

        .chart {
            background-color: #ffc0cb;
        }
    </ui:style>

    <g:SplitLayoutPanel>
        <g:west size='192'>
            <g:FlowPanel ui:field='params'
                         addStyleNames="{style.strategy}"/>
        </g:west>

        <g:north size='200'>
            <g:FlowPanel ui:field='chart'
                           addStyleNames="{style.chart}"/>
        </g:north>


        <g:center>
            <g:FlowPanel ui:field='trades'
                         addStyleNames="{style.backtest}"/>
        </g:center>


    </g:SplitLayoutPanel>


</ui:UiBinder>