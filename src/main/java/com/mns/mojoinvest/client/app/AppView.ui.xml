<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
             ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
             ui:generateLocales="default">

    <ui:with type="com.mns.mojoinvest.client.NameTokens" field="nameTokens"/>
    <ui:with field='res' type='com.mns.mojoinvest.client.resources.Resources'/>

    <ui:style>
        .app {
            margin-bottom: 20px;
        }

        .strategyHeading {
            font-size: 14px;
            margin-top: 20px;
            border-bottom: 1px solid #bdc1c7;
        }

        .tabPanel {
            float: right;
            width: 655px;
            height: 600px;
        }

    </ui:style>

    <g:HTMLPanel addStyleNames="{res.css.main} {style.app}">
        <div class="{style.strategyHeading}">
            <g:Label text="Momentum Strategy"/>
        </div>
        <g:FlowPanel ui:field='params' addStyleNames="{res.css.left}"/>
        <g:TabLayoutPanel addStyleNames="{style.tabPanel}"
                          ui:field="tabPanel" barUnit="PX" barHeight="43">
            <g:tab>
                <g:header>
                    Chart
                </g:header>
                <g:FlowPanel ui:field='chart' addStyleNames="{res.css.left}"/>
            </g:tab>
            <g:tab>
                <g:header>
                    Trades
                </g:header>
                <g:FlowPanel ui:field='trades' addStyleNames="{res.css.left}"/>
            </g:tab>
            <g:tab>
                <g:header>
                    Analysis
                </g:header>
                <g:FlowPanel ui:field='analysis' addStyleNames="{res.css.left}"/>
            </g:tab>
        </g:TabLayoutPanel>
    </g:HTMLPanel>


</ui:UiBinder>