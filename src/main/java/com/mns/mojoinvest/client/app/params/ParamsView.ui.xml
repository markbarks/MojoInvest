<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:p='urn:import:com.mns.mojoinvest.client.app.params'
             ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
             ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
             ui:generateLocales="default">

    <ui:with type="com.mns.mojoinvest.client.NameTokens" field="nameTokens"/>
    <ui:with field='res' type='com.mns.mojoinvest.client.resources.Resources'/>

    <ui:style>

        .params {
            width: 275px;
            margin-top: 20px;
            margin-bottom: 30px;
            float: left;
            margin-right: 20px;
        }

        .submit {
            float: right;
            margin-top: 10px;
        }


    </ui:style>

    <g:HTMLPanel addStyleNames="{style.params}">

        <p:PortfolioParamsEditor ui:field="portfolioParams"/>

        <p:MomentumStrategyParamsEditor ui:field="strategyParams"/>

        <p:FundFilterEditor ui:field="fundFilter"/>

        <p:BacktestParamsEditor ui:field="backtestParams"/>

        <hr width="100%"/>

        <div class="{style.submit}">
            <g:Button ui:field='runStrategyButton'>
                <ui:msg key='paramsFormRunStrategyButton'>Run strategy</ui:msg>
            </g:Button>
        </div>

    </g:HTMLPanel>


</ui:UiBinder>