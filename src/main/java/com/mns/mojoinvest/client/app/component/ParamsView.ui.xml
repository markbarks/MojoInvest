<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:d="urn:import:com.google.gwt.user.datepicker.client"
             xmlns:e='urn:import:com.google.gwt.editor.ui.client'
             xmlns:c='urn:import:com.mns.mojoinvest.client.app.component'
             ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
             ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
             ui:generateLocales="default">

    <ui:with type="com.mns.mojoinvest.client.NameTokens" field="nameTokens"/>
    <ui:with field='res' type='com.mns.mojoinvest.client.resources.Resources'/>

    <ui:style>
        .header {
            font-size: 110%;
            color: #555
        }

        .label {
        }

        .table {
            margin: 10px;
        }

        /* Common measurements used in the app. */
        @def fieldWidth 30em;

        .editField {
            display: inline;
            width: fieldWidth;
        }

        .rightAlign {
            text-align: right;
        }

    </ui:style>

    <g:HTMLPanel>

        <g:DisclosurePanel animationEnabled="true">
            <g:header>Person</g:header>
            <g:FlowPanel>
                <e:ValueBoxEditorDecorator ui:field="name"
                                           stylePrimaryName="{style.editField}">
                    <e:valuebox>
                        <g:TextBox ui:field="nameBox" stylePrimaryName="{style.editField}"/>
                    </e:valuebox>
                </e:ValueBoxEditorDecorator>
                <e:ValueBoxEditorDecorator ui:field="description"
                                           stylePrimaryName="{style.editField}">
                    <e:valuebox>
                        <g:TextBox stylePrimaryName="{style.editField}"/>
                    </e:valuebox>
                </e:ValueBoxEditorDecorator>
                <e:ValueBoxEditorDecorator ui:field="note"
                                           stylePrimaryName="{style.editField}">
                    <e:valuebox>
                        <g:TextArea stylePrimaryName="{style.editField}"/>
                    </e:valuebox>
                </e:ValueBoxEditorDecorator>
                <g:ValueListBox ui:field="pets"
                                stylePrimaryName="{style.editField}">
                </g:ValueListBox>
            </g:FlowPanel>
        </g:DisclosurePanel>
        <g:DisclosurePanel animationEnabled="true">
            <g:header>Address</g:header>
            <g:FlowPanel>
                <c:AddressEditor ui:field="address" stylePrimaryName="{style.editField}"/>
            </g:FlowPanel>
            <!--Mentor:-->
            <!--<dt:MentorSelector ui:field="mentor" stylePrimaryName="{style.editField}"/>-->
            <!--<br/>-->
            <!--Schedule:-->
            <!--<dt:ScheduleEditor ui:field="classSchedule" stylePrimaryName="{style.editField}"/>-->
        </g:DisclosurePanel>

        <g:DisclosurePanel animationEnabled="true">
            <g:header>Filters</g:header>
            <g:HTMLPanel>
                <g:ListBox ui:field="providers" stylePrimaryName="{style.editField}"
                           visibleItemCount="5" multipleSelect="true">
                </g:ListBox>
                <g:ListBox ui:field="categories" stylePrimaryName="{style.editField}"
                           visibleItemCount="5" multipleSelect="true">
                </g:ListBox>
            </g:HTMLPanel>
        </g:DisclosurePanel>

        <g:Button ui:field='runStrategyButton'>
            <ui:msg key='paramsFormRunStrategyButton'>Run strategy</ui:msg>
        </g:Button>

    </g:HTMLPanel>


