<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:d='urn:import:com.google.gwt.user.datepicker.client'>
    <ui:style>

        .backtestParams {
            width: 210px;
            float: right;
            text-align: right;
        }

        /* Common measurements used in the app. */
        @def fieldWidth 10em;

        .editField {
            display: inline;
            width: fieldWidth;
            margin: 2px;
        }


    </ui:style>

    <g:HTMLPanel addStyleNames="{style.backtestParams}">
        From date:
        <d:DateBox ui:field='fromDate' stylePrimaryName="{style.editField}"/>
        <br/>
        To date:
        <d:DateBox ui:field='toDate' stylePrimaryName="{style.editField}"/>
    </g:HTMLPanel>
</ui:UiBinder>