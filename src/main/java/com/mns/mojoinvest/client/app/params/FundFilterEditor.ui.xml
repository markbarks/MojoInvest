<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>

        /* Common measurements used in the app. */
        @def fieldWidth 15em;

        .editField {
            display: inline;
            width: fieldWidth;
        }

        .rightAlign {
            text-align: right;
        }

    </ui:style>

    <g:HTMLPanel>
        <div class="{style.rightAlign}">
            <g:ListBox ui:field="providers" stylePrimaryName="{style.editField}"
                       visibleItemCount="5" multipleSelect="true">
            </g:ListBox>
            <g:ListBox ui:field="categories" stylePrimaryName="{style.editField}"
                       visibleItemCount="5" multipleSelect="true">
            </g:ListBox>
        </div>
    </g:HTMLPanel>


</ui:UiBinder>