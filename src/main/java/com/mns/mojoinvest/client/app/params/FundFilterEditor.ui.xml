<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>

        .fundFilter {
            width: 210px;
            float: right;
            text-align: right;
        }

        /* Common measurements used in the app. */
        @def fieldWidth 15em;

        .editField {
            display: inline;
            width: 90%;
            margin: 2px;
        }

    </ui:style>

    <g:HTMLPanel addStyleNames="{style.fundFilter}">
        <g:ListBox ui:field="providers" stylePrimaryName="{style.editField}"
                   visibleItemCount="5" multipleSelect="true">
        </g:ListBox>
        <br/>
        <g:ListBox ui:field="categories" stylePrimaryName="{style.editField}"
                   visibleItemCount="5" multipleSelect="true">
        </g:ListBox>
    </g:HTMLPanel>


</ui:UiBinder>