<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>


    <ui:style>

        fieldset {
            border: 1px solid #bdc1c7;
            padding: 0;
        }

        legend {
            margin-left: 1em;
        }

        fieldset ol {
            padding: 0;
            list-style: none;
        }

        label {
            float: left;
            width: 10em;
            margin-right: 1em;
            text-align: right;
        }

        /* specific */
        .two-columns {
            margin: 0;
        }

        .two-columns li {
            float: left;
            list-style: none;
            width: 132px;
            margin-left: 2px;
        }

        .filterListBox {
            width: 132px;
        }

    </ui:style>


    <g:HTMLPanel>
        <fieldset>
            <legend>Filters</legend>
            <ol class="{style.two-columns}">
                <li>
                    <label>Providers:</label>
                    <g:ListBox ui:field="providers" addStyleNames="{style.filterListBox}"
                               visibleItemCount="5" multipleSelect="true">
                    </g:ListBox>
                </li>
                <li>
                    <label>Categories:</label>
                    <g:ListBox ui:field="categories" addStyleNames="{style.filterListBox}"
                               visibleItemCount="5" multipleSelect="true">
                    </g:ListBox>
                </li>
            </ol>
        </fieldset>
    </g:HTMLPanel>

</ui:UiBinder>