<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:e='urn:import:com.google.gwt.editor.ui.client'>
    <ui:style>

        .momentumStrategyParams {
            width: 210px;
            float: right;
            text-align: right;
        }

        /* Common measurements used in the app. */
        @def fieldWidth 5em;

        .editField {
            display: inline;
            width: fieldWidth;
            margin: 2px;
        }

    </ui:style>

    <g:HTMLPanel addStyleNames="{style.momentumStrategyParams}">
        Formation period:
        <g:ValueListBox ui:field="formationPeriod"
                        stylePrimaryName="{style.editField}">
        </g:ValueListBox>
        <br/>
        Holding period:
        <g:ValueListBox ui:field="holdingPeriod"
                        stylePrimaryName="{style.editField}">
        </g:ValueListBox>
        <br/>
        Portfolio size:
        <g:ValueListBox ui:field="portfolioSize"
                        stylePrimaryName="{style.editField}">
        </g:ValueListBox>
        <br/>
        Correlation:
        <e:ValueBoxEditorDecorator ui:field="correlation"
                                   stylePrimaryName="{style.editField}">
            <e:valuebox>
                <g:DoubleBox stylePrimaryName="{style.editField}"/>
            </e:valuebox>
        </e:ValueBoxEditorDecorator>
        <br/>
    </g:HTMLPanel>
</ui:UiBinder>