<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:e='urn:import:com.google.gwt.editor.ui.client'>


    <ui:with field='res' type='com.mns.mojoinvest.client.resources.Resources'/>

    <ui:style>

        fieldset {
            border: 1px solid #bdc1c7;
            padding: 0;
        }

        legend {
            margin-left: 1em;
        }

        fieldset ol {
            padding: 0;
            list-style: none;
        }

        label {
            float: left;
            width: 10em;
            margin-right: 1em;
            text-align: right;
        }

    </ui:style>


    <g:HTMLPanel>
        <fieldset>
            <legend>Strategy</legend>
            <ol>
                <li>
                    <label>Formation period:</label>

                    <g:ValueListBox ui:field="formationPeriod"/>
                </li>
                <li>
                    <label>Holding period:</label>
                    <g:ValueListBox ui:field="holdingPeriod"/>
                </li>
                <li>
                    <label>Portfolio size:</label>
                    <g:ValueListBox ui:field="portfolioSize"/>
                </li>
                <li>
                    <label>Correlation:</label>
                    <e:ValueBoxEditorDecorator ui:field="correlation">
                        <e:valuebox>
                            <g:DoubleBox/>
                        </e:valuebox>
                    </e:ValueBoxEditorDecorator>
                </li>
            </ol>
        </fieldset>
    </g:HTMLPanel>


</ui:UiBinder>