<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:e='urn:import:com.google.gwt.editor.ui.client'>

    <ui:with field='res' type='com.mns.mojoinvest.client.resources.Resources'/>


    <ui:style>

        fieldset {
            border: 1px solid #bdc1c7;
            margin: 0;
            padding: 0;
        }

        legend {
            margin-left: 1em;
        }

        fieldset ol {
            padding: 0;
            list-style: none;
        }

        label {
            float: left;
            width: 10em;
            margin-right: 1em;
            text-align: right;
        }

        .editField {
            display: inline;
            width: 40px;
        }

    </ui:style>

    <g:HTMLPanel>
        <fieldset>
            <legend>Portfolio</legend>
            <ol>
                <li>
                    <label>Investment amount:</label>
                    <e:ValueBoxEditorDecorator ui:field="initialInvestment"
                                               addStyleNames="{style.editField}">
                        <e:valuebox>
                            <g:DoubleBox/>
                        </e:valuebox>
                    </e:ValueBoxEditorDecorator>
                </li>
                <li>
                    <label>Transaction cost:</label>
                    <e:ValueBoxEditorDecorator ui:field="transactionCost">
                        <e:valuebox>
                            <g:DoubleBox/>
                        </e:valuebox>
                    </e:ValueBoxEditorDecorator>
                </li>
            </ol>
        </fieldset>
    </g:HTMLPanel>

</ui:UiBinder>