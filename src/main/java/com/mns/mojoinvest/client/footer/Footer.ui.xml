<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:image field='back_footer' src='../resources/back_footer.jpg' repeatStyle='Both'/>
    <ui:with field='res' type='com.mns.mojoinvest.client.resources.Resources'/>

    <ui:style>

        @sprite .footer {
            float: left;
            width: 100%;
            height: 80px;
            padding-top: 23px;
            gwt-image: "back_footer";
            background-position: top center;
            color: #fff;
        }

        .footer ul {
            margin: 0;
            padding: 0;
        }

        .footer li {
            float: left;
            list-style: none;
            margin-right: 22px;
        }

        .footer a {
            color: #e2dfdf;
        }


    </ui:style>

    <g:HTMLPanel addStyleNames="{style.footer}">
        <div class="{res.css.main}">
            <ul class="{res.css.left}">
                <li>
                    <g:InlineHyperlink targetHistoryToken="about">About</g:InlineHyperlink>
                </li>
                <li>
                    <g:InlineHyperlink targetHistoryToken="help">Help</g:InlineHyperlink>
                </li>
                <li>
                    <g:InlineHyperlink targetHistoryToken="terms">Terms</g:InlineHyperlink>
                </li>
            </ul>
            <span class="{res.css.right}">
                &copy;
                2012 Mojoinvest Ltd.
            </span>
            <div class="{res.css.clear}"></div>
        </div>

    </g:HTMLPanel>
</ui:UiBinder> 