<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with type="com.mns.mojoinvest.client.NameTokens" field="nameTokens"/>
    <ui:with field='res' type='com.mns.mojoinvest.client.resources.Resources'/>

    <ui:style>

        .head {
            padding-top: 16px;
            padding-bottom: 18px;
            border-bottom: 1px solid #bdc1c7;
        }

        .menu {
            float: right;
            padding-top: 8px;
        }

        .menu li {
            float: left;
            padding-left: 36px;
            list-style-type: none;
        }

        .menu a {
            color: #444751;
            font-size: 13px;
            text-decoration: none;
        }

        .menu a:hover, .menu a:focus, .menu a:active {
            color: #116388;
        }


    </ui:style>

    <g:HTMLPanel addStyleNames="{res.css.main}">
        <div class="{style.head}">
            <a class="{res.css.left}" href="index.html">
                <!-- TODO: <g:InlineHyperlink targetHistoryToken="home"><g:Image resource='{res.mojo_logo}'/></g:InlineHyperlink>-->
                <g:Image resource='{res.mojo_logo}'/>
            </a>

            <ul class="{style.menu}">
                <li>
                    <g:InlineHyperlink targetHistoryToken="{nameTokens.home}">Home</g:InlineHyperlink>
                </li>
                <li>
                    <g:InlineHyperlink targetHistoryToken="{nameTokens.app}">App</g:InlineHyperlink>
                </li>
                <li>
                    <g:InlineHyperlink targetHistoryToken="{nameTokens.guide}">Tools</g:InlineHyperlink>
                </li>
                <li>
                    <g:InlineHyperlink targetHistoryToken="{nameTokens.guide}">Help</g:InlineHyperlink>
                </li>
            </ul>
            <div class="{res.css.clear}"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder> 